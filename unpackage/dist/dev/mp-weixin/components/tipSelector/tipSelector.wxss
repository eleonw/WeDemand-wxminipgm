.root {
    width: 100vw;
    height: 100vh;
    background-color: var(--color-mask);
    
    position: fixed;
    left: 0;
    top: 0;
    
    z-index: 999;
}
.body {
    
    position: fixed;
    left: 0;
    bottom: 0;
    
    width: 100vw;
    
    background-color: white;
    
    display: -webkit-box;
    
    display: -webkit-flex;
    
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: column nowrap;
            flex-flow: column nowrap;
    
    -webkit-box-align: center;
    
    -webkit-align-items: center;
    
            align-items: center;
    
    -webkit-animation: fadeInUp .3s;
    
            animation: fadeInUp .3s;
}
.fadeOut {
    -webkit-animation: fadeOutDown .3s forwards;
            animation: fadeOutDown .3s forwards;
}
.header {
    
    width: 710rpx;
    
    display: -webkit-box;
    
    display: -webkit-flex;
    
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-flow: row nowrap;
            flex-flow: row nowrap;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    
    padding: 20rpx 0;
    
    border-bottom: 1px solid var(--color-border);
    
    text-align: center;
}
.title {
    font-weight: 600;
    
    color: white;
    background-color: var(--color-main);
    border-radius: 2px;
    
    padding: 8rpx;
    letter-spacing: .2em;
}
.back {
    position: absolute;
    left: 20rpx;
}
.confirm {
    position: absolute;
    right: 20rpx;
}
.main {
    width: 95vw;
    
    display: -webkit-box;
    
    display: -webkit-flex;
    
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: column nowrap;
            flex-flow: column nowrap;
    

    padding: 10px 0;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.button {
    text-align: center;
    background-color: var(--color-main);
    width: 100%;

    font-weight: 600;
    font-size: 1.2em;
    letter-spacing: .8em;
    color: white;

    height: 2em;
    line-height: 2em;
    border-radius: 2px;
}
.body {
     height: 400rpx;
}
.main {
     height: 100%;
     -webkit-box-pack: center;
     -webkit-justify-content: center;
             justify-content: center;
}
.value {
     font-weight: 500;
     font-size: 50rpx;
     letter-spacing: .2em;
     
     padding: 15rpx;
}
.slider {
    width: 85vw;
}
 

