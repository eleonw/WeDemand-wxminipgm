.root {
    --color-main: #457b9d;
    --color-light: #a8dadc;
    --color-dark: #1d3557;
    --color-background: #f8f8f8;
    --color-contrast: #e63946;
    --color-divided: #f8f8f8;
    --color-border: var(--color-background);
    --color-shadow: #F8F8F8;
    
    --height-tabbar: 100rpx;
    --height-toptabbar: 75rpx;
    --height-navbar: 64px;
    --height-statusbar: 20px;
    
    
    font-size: 30rpx;
    letter-spacing: .1em;
}
.page {
    background-color: var(--color-background);
    width: 100vw;
    min-height: 100vh;
   /* margin-top: var(--height-statusbar); */
    
    display: -webkit-box;
    
    display: -webkit-flex;
    
    display: flex;
  
    -webkit-box-orient: vertical;
  
    -webkit-box-direction: normal;
  
    -webkit-flex-flow: column nowrap;
  
            flex-flow: column nowrap;
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
            justify-content: flex-start;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.pageWithTabBar {
    padding-bottom: var(--height-tabbar);
}
.pageWithNavigationBar {
    padding-top: var(--height-navbar);
}
.pageNoSlide {
    height: 100vh;
}
.tabBar {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 999;
}
.navigationBar {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
}
.statusBar {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
}
.borderTop {
    border-top: .1em var(--color-border) solid;
}
.borderRight {
    border-right: .1em var(--color-border) solid;
}
.shadow {
    box-shadow: 0 0 .2em .1em #F8F8F8;
}
.card {
    width: 700rpx;
    border-radius: .3em;
    box-shadow: 0 0 .2em .1em var(--color-shadow);
}







